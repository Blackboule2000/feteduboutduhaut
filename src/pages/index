import { useState, useEffect } from 'react';
import { useSupabaseClient } from '@supabase/auth-helpers-react';
import { useRouter } from 'react-router-dom';
import { Meta } from '../components/Meta';

export default function Home() {
  const supabase = useSupabaseClient();
  const router = useRouter();
  const [eventData, setEventData] = useState<any>(null);

  useEffect(() => {
    const fetchEventData = async () => {
      try {
        const { data, error } = await supabase
          .from('events')
          .select('*')
          .single();

        if (error) {
          console.error('Error fetching event data:', error);
        } else {
          setEventData(data);
        }
      } catch (error) {
        console.error('Error fetching event data:', error);
      }
    };

    fetchEventData();
  }, [supabase]);


  return (
    <>
      <Meta
        title="Fête du Bout du Haut - Festival de Musique à La Chapelle-sous-Gerberoy"
        description="Découvrez la Fête du Bout du Haut, un festival de musique unique à La Chapelle-sous-Gerberoy.  Programmation, billetterie, et plus encore."
        keywords="Fête du Bout du Haut, La Chapelle-sous-Gerberoy, festival de musique, association du bout du haut, concerts, musique, événement, billetterie"
      />
      <main>
        {/* Hero Section */}
        <section className="bg-cover bg-center bg-no-repeat h-[600px] relative" style={{ backgroundImage: `url('https://images.pexels.com/photos/167699/pexels-photo-167699.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1')` }}>
          <div className="absolute inset-0 bg-black/50"></div>
          <div className="absolute inset-0 flex flex-col items-center justify-center text-white text-center">
            <h1 className="text-5xl font-bold mb-4">Fête du Bout du Haut</h1>
            <p className="text-2xl mb-8">Festival de Musique à La Chapelle-sous-Gerberoy</p>
            <button className="bg-festival-orange hover:bg-festival-red text-white font-bold py-2 px-4 rounded">
              Découvrir la programmation
            </button>
          </div>
        </section>

        {/* About Section */}
        <section className="py-12">
          <div className="container mx-auto px-4">
            <h2 className="text-3xl font-bold mb-4">À propos de la Fête</h2>
            <p className="text-lg text-gray-700">
              La Fête du Bout du Haut est un festival de musique organisé par l'association du même nom à La Chapelle-sous-Gerberoy.  Nous proposons une programmation variée et de qualité dans un cadre exceptionnel.
            </p>
          </div>
        </section>

        {/* Programmation Section (if eventData is available) */}
        {eventData && (
          <section className="py-12">
            <div className="container mx-auto px-4">
              <h2 className="text-3xl font-bold mb-4">Programmation</h2>
              {/* Display event data here */}
              <p>La programmation est disponible sur le site.  (Affichage de la programmation ici)</p>
            </div>
          </section>
        )}

        {/* Contact Section */}
        <section className="py-12">
          <div className="container mx-auto px-4">
            <h2 className="text-3xl font-bold mb-4">Contact</h2>
            <p className="text-lg text-gray-700">
              Pour toute question, n'hésitez pas à nous contacter via notre formulaire de contact.
            </p>
          </div>
        </section>
      </main>
    </>
  );
}
